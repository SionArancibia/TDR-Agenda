
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Citas {
  idCitas              Int      @id @default(autoincrement())
  idPaciente           Int
  idProfesional        Int
  fecha                DateTime
  tipoServicio         String
  centroComunitario    String
  asiste               Boolean
  atencionDomiciliaria Boolean
  observaciones        String
}

model User {
  id String @id @default(cuid())
  username String @unique
  fullName String
  password String
  gender Gender
  createdAt DateTime @default(now())
  role Role
}

enum Gender {
  male
  female
}

enum Role {
  admin
  professional
  patient
}

